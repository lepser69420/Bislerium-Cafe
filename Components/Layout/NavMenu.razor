@using CafeCoffee.Components.Data;

<div class="ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <img width="200" height="150" src="icon_rounded.png" />
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@GenerateUrl()">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="orders">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Orders
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="members">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Members
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="payments">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Payments
            </NavLink>
        </div>
        @if (userType == "0")
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="addons">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Addons
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="accounts">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Accounts
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    private string userType { get; set; }

    protected override void OnInitialized()
    {
        userType = DatabaseContext.getInstance().GetCurrentUser().ToString();
    }

    private string GenerateUrl()
    {
        return $"home/{userType}";
    }
}
