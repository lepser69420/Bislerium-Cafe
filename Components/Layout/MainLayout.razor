@inherits LayoutComponentBase
@inject NavigationManager NavManager;
@using CafeCoffee.Components.Data;

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a class="text-danger" @onclick="Logout" target="_blank">Logout</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>


@code {
    private void Logout()
    {
        DatabaseContext.getInstance().SetCurrentUser(-1);
        NavManager.NavigateTo("/login");
    }
}
